<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calculator.so_ni.calculator.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="1dp"
            android:background="?attr/actionModeSplitBackground"
            android:drawablePadding="0dp"
            android:includeFontPadding="false"
            android:maxLength="12"
            android:maxLines="1"
            android:padding="0dp"
            android:paddingHorizontal="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:paddingVertical="0dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/background_light" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buAc"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:height="30dp"
                    android:onClick="buAcEvent"
                    android:padding="0dp"
                    android:paddingTop="0dp"
                    android:text="AC"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buSign"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:onClick="buNumberEvent"
                    android:padding="3dp"
                    android:text="+/-"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buPc"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:onClick="buPcEvent"
                    android:padding="3dp"
                    android:text="%"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buDiv"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_bright"
                    android:onClick="buOpEvent"
                    android:padding="3dp"
                    android:text="/"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bu7"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:height="30dp"
                    android:onClick="buNumberEvent"
                    android:padding="3dp"
                    android:text="7"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bu8"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:onClick="buNumberEvent"
                    android:padding="3dp"
                    android:text="8"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bu9"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:padding="3dp"
                    android:text="9"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buMul"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_bright"
                    android:onClick="buOpEvent"
                    android:padding="3dp"
                    android:text="*"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bu4"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:height="30dp"
                    android:onClick="buNumberEvent"
                    android:padding="3dp"
                    android:text="4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bu5"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:onClick="buNumberEvent"
                    android:padding="3dp"
                    android:text="5"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bu6"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:padding="3dp"
                    android:text="6"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buSub"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_bright"
                    android:onClick="buOpEvent"
                    android:padding="3dp"
                    android:text="-"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bu1"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:height="30dp"
                    android:onClick="buNumberEvent"
                    android:padding="3dp"
                    android:text="1"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bu2"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:onClick="buNumberEvent"
                    android:padding="3dp"
                    android:text="2"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bu3"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:padding="3dp"
                    android:text="3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buAdd"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_bright"
                    android:onClick="buOpEvent"
                    android:padding="3dp"
                    android:text="+"
                    android:textSize="30sp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bu0"
                android:layout_width="210dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:padding="3dp"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buDot"
                android:layout_width="100dp"
                android:layout_height="80dp"

                android:layout_margin="5dp"
                android:layout_weight="0"
                android:onClick="buNumberEvent"
                android:padding="3dp"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/buEql"
                android:layout_width="100dp"
                android:layout_height="80dp"

                android:layout_margin="5dp"
                android:layout_weight="0"
                android:background="@android:color/holo_blue_bright"
                android:onClick="buEqualEvent"
                android:padding="3dp"
                android:text="="
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
